{% extends 'baseArtesano.html.jinja' %}

{% block content %}
<h1>{% block title %} Tipo de Productos {% endblock %}</h1>
    
    
    <table id="formcenter">

        <tr>
            <th>ID de tipo</th>
            <th>Nombre</th>
        </tr>
        {% for type in typesProducts %}
        <tr>
            <td>{{ type.id_tipo }}</td>
            <td>{{ type.nombre }} </td>
            <td class="css"> 
                <button class="css" value="Modificar" onclick="window.location.href='/type_product/create/{{type.id_tipo}}' ;" >Modificar</button> 

                <form action="{{url_for('delete_tipo_producto', type.id_tipo) }}" method="post">
                    <input class="css" type="submit" value="Eliminar">    
                </form> 
                
            </td>

        </tr>

           
           
        {% endfor %}
    </table>
{% endblock %}

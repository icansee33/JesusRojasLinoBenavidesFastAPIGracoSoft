{% extends 'headerCRUD.html.jinja' %}

{% block content %}

<h1 class="titulo"> {% block title %} Añadir un nuevo producto {% endblock %}</h1>

<form action="{{ url_for('create_product_post') }}" method="post">
    <div>
        <label for="id_artesano">Cédula del Artesano: </label><br>
        <input type="text" class="form-control" name="id_artesano" placeholder="Cédula del Artesano" required>
        <br>
    </div>
    <div>
        <label for="nombre">Nombre del Producto: </label><br>
        <input type="text" class="form-control" name="nombre" placeholder="Nombre del Producto" required>
        <br>
    </div>
    <div>
        <label for="descripcion">Descripción: </label><br>
        <textarea class="form-control" name="descripcion" placeholder="Descripción" required></textarea>
        <br>
    </div>
    <div>
        <label for="categoria">Categorías disponibles: </label><br>
        <select id="categoria" name="categoria" class="form-control" required>
            {% for categoria in categorias %}
                <option value="{{ categoria['categoria'] }}">{{ categoria['nombre'] }}</option>
            {% endfor %}
        </select>
        <br>
    </div>
    <div>
        <label for="tipo">Tipo: </label><br>
        <input type="text" class="form-control" name="tipo" placeholder="Tipo" required>
        <br>
    </div>
    <div>
        <label for="dimensiones">Dimensiones: </label><br>
        <input type="text" class="form-control" name="dimensiones" placeholder="Dimensiones" required>
        <br>
    </div>
    <div>
        <label for="peso">Peso: </label><br>
        <input type="number" step="0.01" class="form-control" name="peso" placeholder="Peso" required>
        <br>
    </div>
    <div>
        <label for="imagen">Imagen:</label>
        <input type="file" id="imagen" name="imagen"><br><br>

    </div>
    <input type="submit" value="Submit">
    <form action="{{url_for('delete_producto', id=producto.tipo_producto) }}" method="post">
                    <input class="css" type="submit" value="Eliminar">    
    </form> 
    <form action="{{url_for('update_producto', id=producto.tipo_producto) }}" method="post">
                    <input class="css" type="submit" value="Modificar">    
    </form>
    

</form>

{% endblock %}







































































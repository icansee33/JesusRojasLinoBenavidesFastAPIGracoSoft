{% extends 'baseCliente.html.jinja' %}

{% block content %}
<h1>{% block title %} Productos {% endblock %}</h1>
    
<form action="{{ url_for('') }}" method="post"  enctype="multipart/form-data">



    <div>
        <label for="nombre">Producto: </label><br>
        <input type="text" class="form-control" name="nombre" placeholder="Nombre del Producto" required>
        <br>
    </div>
    <div>
        <label for="cedula_identidad">Descripción: </label><br>
        <textarea class="form-control" name="cedula_identidad" placeholder="cedula_identidad" required></textarea>
        <br>
    </div>

    <div>
        <label for="metodo_envio">Método de envio: </label><br>
        <input type="text" class="form-control" name="metodo_envio" placeholder="metodo_envio" required>
        <br>
    </div>
    <div>
        <label for="descripcion_encargo">Descripción encargo: </label><br>
        <textarea class="form-control" name="descripcion_encargo" placeholder="descripcion_encargo" required>{{product.descripcion}}</textarea>
        <br>
    </div>
    <div>
        <label for="cantidad_disponible">Cantidad disponible: </label><br>
        <input type="number" class="form-control" name="cantidad_disponible" placeholder="cantidad_disponible" required>
        <br>
    </div>
    <div>
        <label for="peso">Peso: </label><br>
        <input type="number"class="form-control" name="peso" placeholder="Peso" required>
        <br>
    </div>
    <div>
        <label for="imagen">Imagen:</label>
        <input type="file" id="imagen" name="imagen" required><br>
    </div>
   
   
    <input type="submit" value="Submit">

</form>


<table id="formcenter">
    <tr>
        <th>ID de Producto</th>
        <th>Nombre</th>
        <th>Descripcion</th>
        <th>Categoria</th>
        <th>Dimensiones</th>
        <th>Peso</th>
        <th>Imagen</th>
    </tr>
    {% for product in Products %}
    <tr>
        <td>{{ product.id_producto }}</td>
        <td>{{ product.nombre }}</td>
        <td>{{ product.descripcion }}</td>
        <td>{{ product.categoria }}</td>
        <td>{{ product.dimensiones }}</td>
        <td>{{ product.peso }}</td>
        <td><img src="/{{product.imagen}}" alt="{{ product.nombre }}" width="100"></td>
    </tr>
    {% endfor %}
</table>
{% endblock %}

{% extends 'headerCRUD.html.jinja' %}

{% block content %}

<h1 class="titulo"> {% block title %} Únete a nuestra familia {% endblock %}</h1>

<form method="POST" action="/usuario/create/">
    <div>
        <label for="nombre">Nombre: </label><br>
        <input type="text" class="form-control" name="nombre" placeholder="nombre">
        <br>
    </div>
    <div>
        <label for="apellido">Apellido: </label><br>
        <input type="text" class="form-control" name="apellido" placeholder="apellido">
        <br>
    </div>
    <div>
        <label for="cedula_identidad">Cédula de identidad: </label><br>
        <input type="text" class="form-control" name="cedula_identidad" placeholder="cedula_identidad">
        <br>
    </div>
    <div>
        <label for="fecha_nacimiento">Fecha de nacimiento: </label><br>
        <input type="date" class="form-control" name="fecha_nacimiento" placeholder="fecha_nacimiento">
        <br>
    </div>
    <div>
        <label for="direccion">Dirección: </label><br>
        <input type="text" class="form-control" name="direccion" placeholder="direccion">
        <br>
    </div>
    <div>
        <label for="correo_electronico">Correo electrónico: </label><br>
        <input type="email" class="form-control" name="correo_electronico" placeholder="correo_electronico">
        <br>
    </div>
    <div>
        <label for="contrasena">Contraseña: </label><br>
        <input type="password" class="form-control" name="contrasena" placeholder="contrasena">
        <br>
    </div>
    <div>
        <input type="hidden" class="form-control" name="tipo_usuario" placeholder="tipo_usuario" value="standard">
        <br>
    </div>
    <input type="submit" value="Submit">
</form>

{% endblock %}
